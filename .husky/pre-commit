#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "🔍 Running pre-commit checks..."

# Run linting
echo "📝 Linting code..."
npm run lint

# Run unit tests
echo "🧪 Running unit tests..."
npm run test:unit

# Run lint-staged for staged files
echo "🎯 Checking staged files..."
npx lint-staged

echo "✅ Pre-commit checks passed!"
